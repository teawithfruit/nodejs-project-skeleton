{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":disableMajorUpdates"],
  "enabledManagers": ["npm"],
  "labels": ["dependencies"],
  "timezone": "Europe/Berlin",
  "baseBranches": ["master"],
  "includePaths": ["package.json"],
  "packageRules": [
    {
      "groupName": "ignore",
      "packagePatterns": ["fs-extra"],
      "enabled": false
    },
    {
      "packagePatterns": ["*"],
      "groupName": "deps",
      "enabled": true
    }
  ]
}
